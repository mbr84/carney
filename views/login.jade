extends layout

block content
  .container
    h1 Login

    br
    form(role='form', action="/login",method="post")
      div
          input.form-control(type='email', name="username", placeholder='Enter Email', required)
      div
        input.form-control(type='password', name="password", placeholder='Password', required, pattern=".{6,}")
      input(type='submit', value="Log In")
      a(href='/register')
        button(type="button") Register
